<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group5.com.barcrawlr.BarSearchActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_beer_search_result_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bookmark_border_black_48dp"/>

    <TextView
        android:id="@+id/tv_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#000"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:id="@+id/iv_bar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:text="Description:"/>

    <TextView
        android:id="@+id/tv_bar_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="16dp"
        android:textSize="25sp"
        android:text="Characteristics:"/>

    <TextView
        android:id="@+id/tv_bar_characteristics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18dp"
        android:layout_marginLeft="16dp"/>

</LinearLayout>
