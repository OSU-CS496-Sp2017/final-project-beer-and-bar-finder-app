<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group5.com.barcrawlr">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BarSearchActivity" />
        <activity android:name=".BeerSearchActivity" />
        <activity android:name=".EventSearchActivity" />
        <activity android:name=".BeerDescriptionActivity" />
        <activity android:name=".BarDescriptionActivity" />
        <activity android:name=".FavoriteBeer"></activity>
        <activity android:name=".FavoriteBars"></activity>
    </application>

</manifest>